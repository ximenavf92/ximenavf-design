---
const {
  href = "#",
  variant = "primary",
  icon = undefined, // e.g. "/images/email-icon.svg" 
  iconAlt = "",
} = Astro.props;
---

<a class={`brand-button variant-${variant}`} href={href}  target="_blank" rel="noopener">
    {icon && <img src={icon} alt={iconAlt} class="brand_btn-icon" />}
    <span class="button-text"><slot></span>
    
</a>

<style>
  .brand-button {
    display: inline-flex;
    gap: 0.5rem;
    font-weight: bold;
    font-size: 1rem;
    text-align: center;
    align-items: center;
    text-decoration: none;
    padding: 0.75rem 1rem;
    margin: 1rem .55rem 1rem 0;
    border: 3px solid #0f1c2e;
    border-radius: 1rem;
    background: white;
    position: relative;
    color: var(--color-dark);
    /* box-shadow: 0 6px 0 var(--button-shadow-color); */
    transition:
      transform 0.15s ease,
  }

  .brand-button::after {
    content: '';
    display: block;
    position: absolute;
    left: -3px;
    bottom: -10px;
    z-index: -1;
    width: 100%;
    height: 110%;
    border-radius: 1rem;
    background: var(--button-shadow-color);
    border: 3px solid var(--color-dark);
  }

    .brand_btn-icon {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
    }

    .button-text {
    display: inline-block;
  }
  .brand-button:hover::after {
    bottom: -3px;
    background: none;
    border: none;
  }

  .brand-button:hover {
    transform: translateY(4px);
  }

  /* Color variants */
  .variant-primary {
    --button-shadow-color: var(--color-primary);
  }
  .variant-accent-primary {
    --button-shadow-color: var(--color-accent-primary);
  }
  .variant-accent-secondary {
    --button-shadow-color: var(--color-accent-secondary);
  }
  .variant-secondary {
    --button-shadow-color: var(--color-secondary);
  }
</style>
