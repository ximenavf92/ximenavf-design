<style>
  .figma-hero {
    width: 100%;
    margin: 2rem auto;
    max-width: 1300px;
    display: grid;
    grid-auto-columns: minmax(200px, 1fr);
    grid-template-rows: repeat(2, auto);
    align-items: center;
    justify-items: center;
    justify-content: center;
  }

@media (min-width: 1200px) {
    .figma-hero {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto;
      gap: 8rem;
    }
    .figma-hero img {
      max-width: 450px;
  }
}

  .figma-hero img {
    width: 100%;
    object-fit: contain;
  }

  h1 {
    font-size: 4rem;
    line-height: 1.2;
    margin-bottom: 1rem;
  }
.intro-blurb {
    margin-bottom: 2rem;
  }

  .hero-title {
    margin-bottom: 2rem;
  }

  .lead-text {
    font-family: var(--font-headings);
    font-size: 1.5rem;
    line-height: 1.3;
    margin-bottom: 1rem;
    font-optical-sizing: auto;
    font-weight: 100;
    font-style: normal;
  }

  .lead-text strong {
    font-weight: 600;
  }

  @media (max-width: 1200px) {
    .figma-hero {
      width: 100%;
      margin: 2rem auto;
      max-width: 800px;
    }
     
    .figma-hero img {
      width: 100%;
      min-width: 200px;
      max-width: 200px;
      justify-self: start;
      text-align: left;
      grid-row: 1;
    }
      h1 {
      font-size: 3.5rem;
      line-height: 1.1;
      margin-top: 1.5rem;
    }
  }


